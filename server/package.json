{
  "name": "gate-prep-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:memory": "nodemon server-inmemory.js",
    "seed": "node -e \"import('./utils/seedData.js').then(m => m.seedDatabase())\"",
    "mongo:local": "mongosh mongodb://localhost:27017/gate-compass",
    "mongo:reset": "node -e \"import('mongoose').then(m => m.connect(process.env.MONGODB_URI || 'mongodb://localhost:27017/gate-compass').then(() => m.connection.db.dropDatabase()).then(() => console.log('Database reset')).then(() => process.exit()))\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "aws-sdk": "^2.1509.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
