# Environment Configuration Template
# Copy this file to .env and fill in your values

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/gate-compass
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gate-compass?retryWrites=true&w=majority

# Alternative MongoDB URI variable name
MONGO_URI=mongodb://localhost:27017/gate-compass

# API Configuration
API_PORT=3001
API_HOST=localhost
JWT_SECRET=your_jwt_secret_here

# ML Service Configuration
ML_SERVICE_URL=http://localhost:5000
ML_SERVICE_PORT=5000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_ML_SERVICE_URL=http://localhost:5000

# External Services
OPENAI_API_KEY=your_openai_key_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Development
NODE_ENV=development
DEBUG=true